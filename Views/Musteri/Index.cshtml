@model IEnumerable<OtoYikamaMusteriTakibi.Models.Musteri>

@{
    ViewBag.Title = "Müþteri Listesi";
}

<div class="container p-5">

    <h2 class="mb-5 text-center">Oto Yýkama Müþteri Takip Uygulamasý</h2>

    <div class="card p-4">

        <div class="row">
            <div class="col-lg-6">
                <h3>Müþteri Listesi</h3>
            </div>
            <div class="col-lg-6 d-flex justify-content-end">
                <a href="@Url.Action("Yeni", "Musteri")" class="btn btn-success mb-3">Yeni Müþteri Ekle</a>
            </div>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Ad Soyad</th>
                    <th>Telefon</th>
                    <th>Plaka</th>
                    <th>Hizmet</th>
                    <th>Hizmet Tarihi</th>
                    <th>Ýþlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var musteri in Model)
                {
                    <tr>
                        <td>@musteri.AdSoyad</td>
                        <td>@musteri.Telefon</td>
                        <td>@musteri.Plaka</td>
                        <td>@musteri.Hizmet</td>
                        <td>@musteri.HizmetTarihi.ToShortDateString()</td>
                        <td>
                            <a href="@Url.Action("Detay", "Musteri", new { id = musteri.Id })" class="btn btn-info btn-sm">Detay</a>
                            <a href="@Url.Action("Duzenle", "Musteri", new { id = musteri.Id })" class="btn btn-warning btn-sm">Düzenle</a>
                            <a href="@Url.Action("Sil", "Musteri", new { id = musteri.Id })" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>